@model Patient
@* @{
    Layout = "~/Views/Shared/_Hospital1Layout.cshtml";
} *@
@{
    ViewData["Title"] = "Update Patient";
   
}
<form method="post" action="/Patient/SaveEditPatient/@Model.UserId">
    <h3>Update Patient</h3>
    <div class="">
        <div class="form-group">
            <input type="text" name="EmergencyContact" id=" EmergencyContact" value="@Model.EmergencyContact" class="form-control" placeholder="Emergency Contact">
        </div>
        <div class="form-group">
            <input type="text" name="InsuranceNumber" id="InsuranceNumber" value="@Model.InsuranceNumber" class="form-control" placeholder="Insurance Number">
        </div>
        <div class="form-group">
            <input type="text" name="InsuranceProvider" id="InsuranceProvider" value="@Model.InsuranceProvider" class="form-control" placeholder="Insurance Provider">
        </div>
        <div class="form-group">
          <input type="hidden" name="UserId" value="@ViewBag.userId" class="form-control">
        </div>  
        <div class="form-group">
            <input type="text" name="Address" id="Address" value="@Model.Address" class="form-control" placeholder="Address">
        </div>
        <div class="form-group">
            <div class="input-wrap">
                <input type="datetime" name="Dob" id=" Dob" value="@Model.Dob" class="form-control" placeholder="Date of Birth">
            </div>
        </div>
    </div>
    <div class="">
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary">
        </div>
    </div>
</form>
